{
  "name": "symfony-vapp",
  "version": "1.0.0",
  "description": "Front of Vapp2",
  "main": "index.php",
  "dependencies": {},
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "copy": "^0.3.2",
    "font-awesome": "^4.7.0",
    "hamburgers": "^1.1.3",
    "jquery": "^3.3.1",
    "materialize-css": "^1.0.0-rc.2",
    "node-minify": "^3.6.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "pixelsmith": "^2.2.1",
    "spritesmith": "^3.3.1",
    "spritesmith-cli": "^1.1.2",
    "uglify-js": "^3.4.9",
    "uglifycss": "0.0.29",
    "uglifyjs-folder": "^1.5.1",
    "static-eval": ">=2.0.0",
    "mustache": ">=2.2.1"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "get-jquery": "node_modules/copy/bin/cli.js \"node_modules/jquery/dist/*.min.js\" public/js",
    "get-materialize": "node_modules/copy/bin/cli.js \"node_modules/materialize-css/dist/js/./*.min.js\" public/js",
    "get-libraries": "npm run get-jquery & npm run get-materialize",
    "get-fonts": "node_modules/copy/bin/cli.js \"assets/fonts/*\" public/fonts; node_modules/copy/bin/cli.js \"node_modules/font-awesome/fonts/*\" public/fonts",
    "build-css": "node_modules/node-sass/bin/node-sass --output-style compressed --include-path assets/scss assets/scss/styles.scss public/css/styles.css",
    "watch-css": "node_modules/nodemon/bin/nodemon.js -e scss --watch assets/scss -x \"npm run build-css\"",
    "build-js": "node_modules/uglifyjs-folder/cli.js assets/js -eo public/js",
    "watch-js": "npm run get-libraries; node_modules/nodemon/bin/nodemon.js -e js --watch assets/js -x \"npm run build-js\"",
    "build-icons": "node_modules/spritesmith-cli/bin/spritesmith; node_modules/uglifycss/uglifycss --output public/css/icons.css public/css/icons.css",
    "watch-icons": "node_modules/nodemon/bin/nodemon.js -e png --watch assets/icons -x \"npm run build-icons\"",
    "livereload": "node_modules/browser-sync/dist/bin.js start --proxy \"localhost:8000\" --files \"public/css/*.css,public/js/*.js,templates/**/*.twig,src/**/*.php\" --no-notify",
    "dev": "npm run get-libraries; npm run get-fonts; php bin/console server:run & npm run watch-css & npm run watch-js & npm run watch-icons & npm run livereload"
  },
  "author": "Cristian Anzola",
  "license": "ISC"
}
